<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryAppJuzairi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>

        <item name="colorSecondary">@color/cream</item>
        <item name="colorSecondaryVariant">@color/cream</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.StoryAppJuzairi" parent="Base.Theme.StoryAppJuzairi" />


    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_left</item>
    </style>

    <style name="CardImageStory">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Theme.StoryAppJuzairi.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.StoryAppJuzairi.AppWidgetContainer" parent="Theme.StoryAppJuzairi.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>